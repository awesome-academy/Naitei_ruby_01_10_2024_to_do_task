<div class="row">
  <div class="col-md-12">
    <% if tasks.any? %>
      <table class="table table-hover">
        <thead>
          <tr>
            <% task_table_headers.each do |header| %>
              <th><%= header %></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "task_row", collection: tasks, as: :task %>
        </tbody>
      </table>

      <div class="d-flex justify-content-center">
        <%== pagy_bootstrap_nav pagy %>
      </div>
    <% else %>
      <p class="text-center"><%= t("tasks.index.messages.no_tasks") %></p>
    <% end %>
  </div>
</div>
