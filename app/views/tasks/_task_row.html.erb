<tr>
  <td><%= task.title %></td>
  <td><%= task.priority.capitalize %></td>
  <td><%= task.category&.name || "N/A" %></td>
  <td><%= task.status.capitalize %></td>
  <td><%= task.created_at.strftime("%Y-%m-%d") %></td>
  <td><%= task.deadline&.strftime("%Y-%m-%d") || "N/A" %></td>
  <td>
    <%= link_to t("tasks.index.table.update"), edit_task_path(task), class: "btn btn-warning btn-sm" %>
    <%= button_to t("tasks.index.table.delete"), task_path(task), method: :delete, data: { turbo_confirm: t("user.you_sure") }, class: "btn btn-danger btn-sm", form: { style: "display: inline;" } %>
  </td>
</tr>
